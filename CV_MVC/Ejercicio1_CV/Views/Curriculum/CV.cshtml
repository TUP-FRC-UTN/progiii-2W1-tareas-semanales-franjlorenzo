@model Ejercicio1_CV.Models.Persona
@{
    ViewBag.Title = "CV";
}

<hr /><hr />
<link rel="stylesheet" href="">
<link rel="stylesheet" href="styles.css">

<section>
    <div id="intro" class="view">
        <div class="container full-bg-img">
            <div class="col-sm-12">
                <img src="https://pbs.twimg.com/media/DmU12owUYAABwjl.jpg" class="img-fluid mx-auto d-block py-3"
                     alt="Image">
                <h1 style="color:white" class="text-center py-2 text-white">@Html.DisplayNameFor(Model => Model.nombre) @Html.DisplayNameFor(Model => Model.apellido)</h1>
                <h2 style="color:white" class="text-center py-5 text-white">@Html.DisplayNameFor(Model => Model.puesto)</h2>
            </div>
        </div>
    </div>
</section>
<hr>
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3>Datos personales:</h3>
                <ul>
                    <li>Email: jackdaniels@gmail.com</li>
                    <li>Teléfono: @Html.DisplayNameFor(Model => Model.telefono)</li>
                    <li>Texas - Estados Unidos</li>
                    <li>Twitter: <a href="https://twitter.com/JackDaniels_US">jackdaniels</a></li>
                    <li>Casado: @Html.DisplayNameFor(Model => Model.estadoCivil)</li>
                </ul>
            </div>
            <div class="col-sm-6">
                <h3>Experiencia profesional</h3>
                <ol>
                    <li>Empresa: Johnnie Walker. 2010 - 2020. CEO. </li>
                    <li>Empresa: Johnnie Walker. 2005 - 2010. Gerente de proyectos.</li>
                    <li>Empresa: Johnnie Walker. 1997 - 2005. Programador Jr.</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<hr>
<section>
    <div class="container-fluid">
        <h4>Educación:</h4>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Universidad</th>
                            <th colspan="2">Carrera</th>
                        </tr>
                        <tr>
                            <td>UTN - FRC</td>
                            <td>Ingeniería en sistemas, Tecnicatura en Programación</td>
                        </tr>
                        <tr>
                            <td>Siglo 21</td>
                            <td>Ciber Seguridad</td>
                        </tr>
                        <tr>
                            <td>UNC - Córdoba</td>
                            <td>Administración de Empresas</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

