@model NegocioInstrumentosMVC.Models.Instrumento
@{
    ViewBag.Title = "EliminarInstrumento";
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Eliminar el siguiente instrumento: @Model.pNombre</h4>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(Model => Model.IdInstrumento)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.pNombre, htmlAttributes: new { @class = "form-control", id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Descripcion</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.pDescripcion, htmlAttributes: new { @class = "form-control", id = "txtDescripcion" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Stock</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.pStock, htmlAttributes: new { @class = "form-control", id = "txtStock" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Precio</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.pPrecio, htmlAttributes: new { @class = "form-control", id = "txtPrecio" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Eliminar instrumento
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

