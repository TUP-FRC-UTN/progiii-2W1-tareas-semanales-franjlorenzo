@model IEnumerable<ABM_Persona.Models.Persona>
@{
    ViewBag.Title = "ListadoPersona";
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Listado de personas cargadas en la base de datos</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">
                        Nombre
                    </th>
                    <th class="text-center">
                        Apellido
                    </th>
                    <th class="text-center">
                        Telefono
                    </th>
                    <th class="text-center">
                        Edad
                    </th>
                    <th class="text-center">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in Model)
                {
                    <tr class="text-center">
                        <td>
                            @persona.Nombre
                        </td>
                        <td>
                            @persona.Apellido
                        </td>
                        <td>
                            @persona.Telefono
                        </td>
                        <td>
                            @persona.Edad
                        </td>
                        <td>
                            <a href="@Url.Action("EliminarPersona", "EliminarPersona", new {@idPersona = persona.Id})" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

