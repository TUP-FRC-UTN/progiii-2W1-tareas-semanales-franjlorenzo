@model IEnumerable<EjemploMVC.Models.Persona>

@{
    ViewBag.Title = "Listado de personas";
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Listado de personas cargadas en la base de datos</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">
                        Nombre
                    </th>
                    <th class="text-center">
                        Apellido
                    </th>
                    <th class="text-center">
                        Telefono
                    </th>
                    <th class="text-center">
                        Edad
                    </th>
                    <th class="text-center">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var persona in Model)
                {
                <tr class="text-center">
                    <td>
                        @persona.nombre;
                    </td>
                    <td>
                        @persona.apellido;
                    </td>
                    <td>
                        @persona.telefono;
                    </td>
                    <td>
                        @persona.edad;
                    </td>
                    <td>
                        <a href="@Url.Action("DatosPersona", "Persona", new {@idPersona = persona.id})" class="btn btn-warning">Mostrar</a>
                        <a href="@Url.Action("EliminarPersona", "Persona", new {@idPersona = persona.id})" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


